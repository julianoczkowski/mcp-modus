{
  "name": "@julianoczkowski/mcp-modus",
  "version": "1.1.0",
  "description": "MCP server for Modus Web Components documentation, design rules, and setup guides",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-modus": "dist/index.js"
  },
  "files": [
    "dist",
    "docs",
    "rules",
